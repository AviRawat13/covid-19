<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/view_margin_small"
    android:background="@color/itemBackground"
    android:padding="@dimen/view_padding_small">

    <TextView
        android:id="@+id/country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin_small"
        android:layout_marginLeft="@dimen/view_margin_normal"
        android:layout_marginRight="@dimen/view_margin_normal"
        android:textSize="@dimen/text_size_xnormal"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        tools:text="Afghanistan"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flag_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/view_margin_small"
            android:layout_marginBottom="@dimen/view_margin_small"
            android:layout_marginStart="@dimen/view_margin_normal"
            android:layout_marginEnd="@dimen/view_margin_normal"
            android:contentDescription="@string/flag_icon"
            tools:src="@drawable/ic_home_black_24dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/info_recycler_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:spanCount="3"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>

    </LinearLayout>

</LinearLayout>